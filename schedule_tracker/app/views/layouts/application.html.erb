<!DOCTYPE html>
<html>
  <head>
    <title>ScheduleTracker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <header>
    <h1>Schedule Tracker</h1>
  </header>

  <div class="main">
    <%= yield %>
  </div>

<div id="top">
  <div id="primary">
    <% if flash[:message] %>
      <p class="flash-message"><%= flash[:message] %></p>
    <% end %>
  </div>


  	<div id="header">
  		<div id="links">
      <%= link_to "Home", "/" %>
  		<%= link_to "Courses", Courses_path %>
  		<%= link_to "Registrations", Registrations_path %>
  		<%= link_to "Student Profile", Student_path if session[:Student] %>
  		<%= link_to "Login", login_path unless session[:Student] %>


  		</div>
  		<h1><a href="#">Schedule Tracker!</a></h1>
  	</div>

    <div id="primary">
      <% if flash[:message] %>
        <p class="flash-message"><%= flash[:message] %></p>
      <% end %>
    </div>
  </div>
</body>

<footer>
<p>
  Welcome to your schedule tracker app!

  <% if session[:net_id] %>
    <%= link_to 'Logout', logout_path %>
  <% else %>
    <%= link_to 'Login', login_path %>
  <% end %>
</p>
</footer>
</html>
